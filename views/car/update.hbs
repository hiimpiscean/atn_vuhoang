<div class="container col-md-8 mt-5">
   <form action="/car/edit/{{car._id}}" method="post" class="card p-3 bg-light text-center">
      <h2 class="text text-primary">Edit car Information</h2>

      <div class="form-group">
         <label class="text-success h6">Name</label>
         <input class="form-control" type="text" name="name" value="{{car.name}}" required minlength="3" maxlength="70">
      </div>

      <div class="form-group">
         <label class="text-success h6">Price</label>
         <input class="form-control" type="number" name="price" value="{{car.price}}" required>
      </div>

      <div class="form-group mt-3">
         <label class="text-success h6">Description</label>
         <input class="form-control" type="text" name="description" value="{{car.description}}" required>
      </div>

      <div class="form-group mt-3">
         <label class="text-success h6">Date of Manufacture</label>
          <th>{{dateFormat customer.dob "DD/MM/YYYY"}}</th>
         <input class="form-control" type="date" name="dob" value="{{dateFormat car.dob "DD/MM/YYYY"}}" required>
      </div>

      <div class="form-group mt-3">
         <label class="text-success h6">Size</label>
         <input class="form-control" type="text" name="size" value="{{car.size}}" required>
      </div>

      <div class="form-group mt-3">
         <label class="text-success h6">Supplier</label>
         <input class="form-control" type="text" name="supplier" value="{{car.supplier}}" required>
      </div>

      <div class="form-group mt-3">
         <label class="text-success h6">Status</label>

         {{#equal car.graduated true}}
         <input type="checkbox" value="true" name="available" checked>
         {{/equal}}

         {{#equal car.graduated false}}
         <input type="checkbox" value="false" name="unavailable">
         {{/equal}}
      </div>

      <div class="form-group mt-3">
         <label class="text-success h6">Image</label><br>
         <img src="{{car.image}}" width="100" height="100">
         <input class="form-control mt-3" type="text" name="image" value="{{car.image}}" required>
      </div>

      <div class="form-group mt-3">
         <input class="btn btn-primary mt-3" type="submit" value="Edit">
      </div>
   </form>
</div>