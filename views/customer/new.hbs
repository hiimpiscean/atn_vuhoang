<div class="container col-md-8 mt-5">
   <form action="/customer/add" method="post" class="card p-3 bg-light text-center">
      <h2 class="text text-primary">Add new Customer</h2>

      <div class="form-group">
         <label class="text-success h6">Full Name</label>
         <input class="form-control" type="text" name="fullname" required minlength="3" maxlength="50">
      </div>

      <div class="form-group mt-3">
         <label class="text-success h6">Email</label>
         <input class="form-control" type="email" name="email" required minlength="3" maxlength="50">
      </div>

      <div class="form-group mt-3">
         <label class="text-success h6">Gender</label><br>
         Male <input type="radio" name="gender" value="Male">
         Female <input type="radio" name="gender" value="Female">
         Other <input type="radio" name="gender" value="Other">
      </div>

 <div class="form-group mt-3">
         <label class="text-success h6">Date of Birth</label>
         <input class="form-control" type="date" name="dob" required>
      </div>

<div class="form-group mt-3">
         <label class="text-success h6">Email</label>
         <input class="form-control" type="text" name="email" required>
      </div>

      <div class="form-group mt-3">
         <label class="text-success h6">Address</label>
         <input class="form-control" type="text" name="address" required>
      </div>

      <div class="form-group mt-3">
         <label class="text-success h6">Image</label>
         <input class="form-control" type="text" name="image" required>
      </div>

      <div class="form-group mt-3">
         <input class="btn btn-primary mt-3" type="submit" value="Add">
      </div>
   </form>
</div>