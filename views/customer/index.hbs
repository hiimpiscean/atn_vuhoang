<table class="table table-bordered bg-light p-4 mt-3 mb-3 text-center">
   <th colspan="3">
      <select class="form-control" onchange="window.location.href=this.value">
         <option value="">Sort by name</option>
         <option value="/customer/sort/asc">Ascending</option>
         <option value="/customer/sort/desc">Descending</option>
      </select>
   </th>

   <th colspan="1">
      <form action="/customer/search" method="post">
         <div class="form-group">
            <input class="form-control" type="search" name="name" placeholder="Search by name">
         </div>
      </form>
   </th>

   <h1 style="text-align: center;">This is information about Customer table</h1>
   <tr>
      <th class="text-primary" colspan="3">Customer List</th>
      <th>
         <p>Menu</p>
         <a class="btn btn-primary" href="/customer/add">Add</a>
         <a class="btn btn-success" href="/customer/drop"
            onclick="return confirm('Are you sure to delete all information about customer?');">Delete All</a>
      </th>
   </tr>
   <tr>
      <th>Full Name</th>
      <th>Gender</th>
      <th>Image</th>
   </tr>
   {{#each customer }}
   <tr>
      <td>{{fullname}}</td>
      <td>{{gender}}</td>
      <td>
         <a href="/customer/detail/{{_id}}">
            <img src="{{image}}" width="100" height="100">
         </a>
      </td>

      <td>
         <a class="btn btn-warning" href="/customer/edit/{{_id}}">EDIT</a>
         <a class="btn btn-danger" href="/customer/delete/{{_id}}">DELETE</a>
      </td>
   </tr>
   {{/each}}
</table>