<div class="container col-md-8 mt-5">
   <form action="/tranformer/edit/{{tranformer._id}}" method="post" class="card p-3 bg-light text-center">
      <h2 class="text text-primary">Edit Tranformer Information</h2>

      <div class="form-group">
         <label class="text-success h6">Name</label>
         <input class="form-control" type="text" name="name" value="{{tranformer.name}}" required minlength="3"
            maxlength="70">
      </div>

      <div class="form-group">
         <label class="text-success h6">Price</label>
         <input class="form-control" type="number" name="price" value="{{tranformer.price}}" required>
      </div> 

      <div class="form-group mt-3">
         <label class="text-success h6">Date of Manufacture</label>
         {{!-- <th>{{dateFormat customer.dob "DD/MM/YYYY"}}</th> --}}
         <input class="form-control" type="date" name="dob" value="{{dateFormat toy.dob 'YYYY-MM-DD'}}" required>
      </div>

      <div class="form-group mt-3">
         <label class="text-success h6">Category</label>
         <input class="form-control" type="text" name="size" value="{{tranformer.category}}" required>
      </div>

      <div class="form-group mt-3">
         <label class="text-success h6">Supplier</label>
         <input class="form-control" type="text" name="supplier" value="{{tranformer.supplier}}" required>
      </div>

      <div class="form-group mt-3">
         <label class="text-success h6">Status</label>

         {{#equal tranformer.graduated true}}
         <input type="checkbox" value="true" name="available" checked>
         {{/equal}}

         {{#equal tranformer.graduated false}}
         <input type="checkbox" value="false" name="unavailable">
         {{/equal}}
      </div>

      <div class="form-group mt-3">
         <label class="text-success h6">Description</label>
         <input class="form-control" type="text" name="description" value="{{tranformer.description}}" required>
      </div>

      <div class="form-group mt-3">
         <label class="text-success h6">Image</label><br>
         <img src="{{tranformer.image}}" width="100" height="100">
         <input class="form-control mt-3" type="text" name="image" value="{{tranformer.image}}" required>
      </div>

      <div class="form-group mt-3">
         <input class="btn btn-primary mt-3" type="submit" value="Update">
      </div>
   </form>
</div>